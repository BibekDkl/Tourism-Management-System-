<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #1B5E20);"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.nepaltourismmanagement.controllers.LoginController">

    <children>
        <!-- Background Pattern -->
        <Rectangle fill="white" opacity="0.05" StackPane.alignment="CENTER">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="#2E7D32" height="10" radius="4" width="10" />
            </effect>
        </Rectangle>

        <!-- Main Login Container -->
        <VBox alignment="CENTER"
              maxWidth="500"
              minWidth="300"
              prefWidth="400"
              maxHeight="650"
              minHeight="500"
              prefHeight="580"
              spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>

            <!-- Logo and Title -->
            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <!--<Image url="@/images/logo.png" />-->
                    </image>
                </ImageView>
                <Label style="-fx-text-fill: #2E7D32; -fx-font-size: 28px; -fx-font-weight: bold;" text="Trip Sewa Nepal !" />
                <Label style="-fx-text-fill: #666; -fx-font-size: 16px;" text="Your Gateway to Adventure" />
            </VBox>

            <!-- Login Form -->
            <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
                <Label style="-fx-text-fill: #666; -fx-font-size: 18px;" text="Welcome Back!" />

                <!-- Username Field -->
                <VBox spacing="8" VBox.vgrow="NEVER">
                    <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Username *" />
                    <TextField fx:id="usernameField" promptText="Enter your username"
                               style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-font-size: 14px; -fx-prompt-text-fill: #999;"
                               maxWidth="Infinity" />
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8" VBox.vgrow="NEVER">
                    <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Password *" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password"
                                   style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-font-size: 14px; -fx-prompt-text-fill: #999;"
                                   maxWidth="Infinity" />
                </VBox>

                <!-- Remember Me and Forgot Password -->
                <HBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="NEVER">
                    <CheckBox fx:id="rememberMe" style="-fx-text-fill: #666;" text="Remember me" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword"
                               style="-fx-text-fill: #2E7D32; -fx-border-color: transparent; -fx-font-weight: bold;"
                               text="Forgot password?" />
                </HBox>

                <!-- Login Button -->
                <Button fx:id="loginButton" onAction="#handleLogin"
                        style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40; -fx-background-radius: 8; -fx-font-size: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"
                        text="Login"
                        maxWidth="Infinity" />

                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5" VBox.vgrow="NEVER">
                    <Label style="-fx-text-fill: #666;" text="Don't have an account?" />
                    <Hyperlink fx:id="registerLink" onAction="#handleRegisterLink"
                               style="-fx-text-fill: #2E7D32; -fx-font-weight: bold; -fx-border-color: transparent;"
                               text="Register" />
                </HBox>

<!--                &lt;!&ndash; Admin Hint &ndash;&gt;-->
<!--                <VBox alignment="CENTER" spacing="2" VBox.vgrow="NEVER">-->
<!--                    <Label fx:id="adminHintLabel" style="-fx-text-fill: #999; -fx-font-size: 11px;" textAlignment="CENTER" />-->
<!--                </VBox>-->

<!--                &lt;!&ndash; Current Date and User &ndash;&gt;-->
<!--                <VBox alignment="CENTER" spacing="2" style="-fx-padding: 5 0 0 0;" VBox.vgrow="NEVER">-->
<!--                    <Label fx:id="currentTimeLabel" style="-fx-text-fill: #999; -fx-font-size: 10px;" text="Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): 2025-07-30 04:57:34" textAlignment="CENTER" />-->
<!--                    <Label fx:id="currentUserLabel" style="-fx-text-fill: #999; -fx-font-size: 10px;" text="Current User's Login: BibekDkl" textAlignment="CENTER" />-->
<!--                </VBox>-->
            </VBox>
        </VBox>
    </children>
</StackPane>