<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #1B5E20);"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.nepaltourismmanagement.controllers.RegisterController">

    <children>
        <!-- Background Pattern -->
        <Rectangle fill="white" opacity="0.05" StackPane.alignment="CENTER">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="#2E7D32" height="10" radius="4" width="10" />
            </effect>
        </Rectangle>

        <!-- Main Container -->
        <VBox alignment="CENTER"
              maxWidth="500"
              minWidth="300"
              prefWidth="450"
              maxHeight="650"
              minHeight="500"
              prefHeight="580"
              spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>

            <!-- Title -->
            <Label style="-fx-text-fill: #2E7D32; -fx-font-size: 28px; -fx-font-weight: bold;" text="Create Account" />
            <Label style="-fx-text-fill: #666; -fx-font-size: 16px;" text="Join Trip Sewa Nepal!" />

            <!-- Registration Form -->
            <GridPane hgap="15" vgap="15">
                <!-- Full Name -->
                <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Full Name *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="fullNameField" promptText="Enter your full name"
                           style="-fx-pref-height: 35; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Email -->
                <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Email *" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="emailField" promptText="Enter your email"
                           style="-fx-pref-height: 35; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Phone -->
                <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Phone *" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="phoneField" promptText="Enter your phone number"
                           style="-fx-pref-height: 35; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <!-- Username -->
                <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Username *" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="usernameField" promptText="Choose a username"
                           style="-fx-pref-height: 35; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <!-- Password -->
                <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Password *" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <PasswordField fx:id="passwordField" promptText="Create a password"
                               style="-fx-pref-height: 35; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8;"
                               GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <!-- Confirm Password -->
                <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Confirm Password *" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password"
                               style="-fx-pref-height: 35; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8;"
                               GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <!-- User Role -->
                <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Register as *" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <ComboBox fx:id="userRoleCombo" prefWidth="200"
                          style="-fx-pref-height: 35; -fx-background-radius: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </GridPane>

            <!-- Register Button -->
            <Button fx:id="registerButton" onAction="#handleRegister"
                    style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40; -fx-background-radius: 8; -fx-font-size: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"
                    text="Register"
                    maxWidth="Infinity" />

            <!-- Login Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label style="-fx-text-fill: #666;" text="Already have an account?" />
                <Hyperlink fx:id="loginLink" onAction="#handleLoginLink"
                           style="-fx-text-fill: #2E7D32; -fx-font-weight: bold; -fx-border-color: transparent;"
                           text="Sign in" />
            </HBox>

