<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #1B5E20);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nepaltourismmanagement.controllers.RegisterController">

    <children>
        <!-- Background Pattern -->
        <Rectangle fill="white" height="700" opacity="0.05" width="800">
            <effect>
                <DropShadow blurType="GAUSSIAN" color="#2E7D32" height="10" radius="4" width="10" />
            </effect>
        </Rectangle>

        <!-- Main Register Container -->
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox alignment="CENTER" prefHeight="1183.0" prefWidth="761.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="40" />
                </padding>

                <!-- Logo and Title -->
                <VBox alignment="TOP_CENTER" spacing="10">
                    <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                        <image>
<!--                            <Image url="@/images/logo.png" />-->
                        </image>
                    </ImageView>
                    <Label style="-fx-text-fill: #2E7D32; -fx-font-size: 32px; -fx-font-weight: bold;" text="Trip Sewa Nepal" />
                    <Label style="-fx-text-fill: #666; -fx-font-size: 16px;" text="Your Gateway to Adventure" />
                    <Label style="-fx-text-fill: #666; -fx-font-size: 18px;" text="Create your account For adventure with us!!" />
                </VBox>

                <!-- Register Form -->
                <VBox spacing="15">
                    <!-- Full Name Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Full Name *" />
                        <TextField fx:id="fullnameField" promptText="Enter your full name" style="-fx-pref-height: 45;                                         -fx-background-radius: 8;                                         -fx-border-color: #E0E0E0;                                         -fx-border-radius: 8;                                         -fx-font-size: 14px;                                         -fx-prompt-text-fill: #999;" />
                    </VBox>

                    <!-- Nationality Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Nationality *" />
                        <TextField fx:id="nationalityField" promptText="Enter your nationality" style="-fx-pref-height: 45;                                         -fx-background-radius: 8;                                         -fx-border-color: #E0E0E0;                                         -fx-border-radius: 8;                                         -fx-font-size: 14px;                                         -fx-prompt-text-fill: #999;" />
                    </VBox>

                    <!-- Contact Number Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Contact Number *" />
                        <TextField fx:id="contactField" promptText="Enter your contact number" style="-fx-pref-height: 45;                                         -fx-background-radius: 8;                                         -fx-border-color: #E0E0E0;                                         -fx-border-radius: 8;                                         -fx-font-size: 14px;                                         -fx-prompt-text-fill: #999;" />
                    </VBox>

                    <!-- Email Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Email *" />
                        <TextField fx:id="emailField" promptText="Enter your email address" style="-fx-pref-height: 45;                                         -fx-background-radius: 8;                                         -fx-border-color: #E0E0E0;                                         -fx-border-radius: 8;                                         -fx-font-size: 14px;                                         -fx-prompt-text-fill: #999;" />
                    </VBox>

                    <VBox spacing="8" />

                    <!-- Passport Number Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="citizenship/Passport Number" />
                        <TextField fx:id="passportField" promptText="Enter your passport number" style="-fx-pref-height: 45;                                         -fx-background-radius: 8;                                         -fx-border-color: #E0E0E0;                                         -fx-border-radius: 8;                                         -fx-font-size: 14px;                                         -fx-prompt-text-fill: #999;" />
                    </VBox>

                    <!-- Password Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Password *" />
                        <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-pref-height: 45;                                             -fx-background-radius: 8;                                             -fx-border-color: #E0E0E0;                                             -fx-border-radius: 8;                                             -fx-font-size: 14px;                                             -fx-prompt-text-fill: #999;" />
                    </VBox>

                    <!-- Confirm Password Field -->
                    <VBox spacing="8">
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Confirm Password *" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" style="-fx-pref-height: 45;                                             -fx-background-radius: 8;                                             -fx-border-color: #E0E0E0;                                             -fx-border-radius: 8;                                             -fx-font-size: 14px;                                             -fx-prompt-text-fill: #999;" />
                  <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Emergency Contact Number *" />
                  <TextField fx:id="contactField1" promptText="Enter your contact number" style="-fx-pref-height: 45;                                         -fx-background-radius: 8;                                         -fx-border-color: #E0E0E0;                                         -fx-border-radius: 8;                                         -fx-font-size: 14px;                                         -fx-prompt-text-fill: #999;" />
                        <Label style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Select Role *" />
                        <ComboBox fx:id="roleComboBox" promptText="Select your role" style="-fx-pref-height: 45;                      -fx-background-radius: 8;                      -fx-border-color: #E0E0E0;                      -fx-border-radius: 8;                      -fx-font-size: 14px;                      -fx-prompt-text-fill: #999;                      -fx-background-color: white;">
                        </ComboBox>
                    </VBox>


                    <!-- Register Button -->
                    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 10 0 0 0;">
                        <!-- Register Button Centered -->
                        <Button fx:id="registerButton" onAction="#handleRegister" style="-fx-background-color: #2E7D32;                                    -fx-text-fill: white;                                    -fx-font-weight: bold;                                    -fx-pref-height: 45;                                    -fx-pref-width: 320;                                    -fx-background-radius: 8;                                    -fx-font-size: 15px;                                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Register" />

                        <!-- Login Link -->
                        <HBox alignment="CENTER" spacing="5">
                            <Label style="-fx-text-fill: #666;" text="Already have an account?" />
                            <Hyperlink fx:id="loginLink" onAction="#handleLoginLink" style="-fx-text-fill: #2E7D32;                                              -fx-font-weight: bold;                                              -fx-border-color: transparent;                                              -fx-padding: 0;" text="Login" />
                        </HBox>
                    </VBox>

                </VBox>
            </VBox>
        </ScrollPane>
    </children>
</StackPane>
